<Window x:Class="HIVTreatment_PRN.Doctor.AddExaminationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HIVTreatment_PRN.Doctor"
        mc:Ignorable="d"
         Title="Thêm kết quả xét nghiệm" Height="350" Width="400"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="CD4 Count:"/>
        <TextBox x:Name="txtCD4"/>

        <TextBlock Text="HIV Load:" Margin="0,10,0,0"/>
        <TextBox x:Name="txtHIVLoad"/>

        <TextBlock Text="Kết quả:" Margin="0,10,0,0"/>
        <TextBox x:Name="txtResult"/>

        <Button Content="Lưu" Margin="0,20,0,0" Click="BtnSave_Click"/>
    </StackPanel>
</Window>
